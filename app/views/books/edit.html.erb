<div class="container">
<div class="col-md-6 col-md-offset-3">
  <h1>Editing Book</h1>
<% if @book.errors.any? %>
  <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
  <ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for(@book) do |f| %>
<div class="field row">
	<h4>Title</h4>
	<%= f.text_field :title, class:"col-xs-12" %>
</div>
  <div class="field row">
	<h4>Opinion</h4>
	<%= f.text_area :body, class:"col-xs-12" %>
</div>
  <p></p>
  <div class="actions row">
  <%= f.submit 'Update Book', class:"btn btn-primary btn-block col-xs-12" %>
</div>
<% end %>

<%= link_to 'Show',book_path(@book) %>
<%= link_to 'Back',books_path %>
</div>
</div>
