<div class="container">
    <%= flash[:notice] %>
  <div class="row">
    <div class="col-xs-3">

    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format:'jpeg', class:"img-circle pull-left profile-img", fallback:"no_image.jpeg" %>
    <h2></h2>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

    <div class="row">
        <%= link_to "",edit_user_path(current_user.id),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_12859"
        %>
      </div>
<h2>New book</h2>

<%= form_for(@booknew) do |f| %>
<h3>Title</h3>
<%= f.text_field :title %>
<h3>Opinion</h3>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
    </div>
    <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table table-striped">
	  <tr>
	  <td>
      <%=link_to user_path(@user) do %>
       <%= attachment_image_tag @book.user, :profile_image, format:"jpeg",fallback:"no_image.jpg",size:"40x40"%>
       <%= @user.name %>
       <% end %>
    </td>
		<td><%= link_to @book.title,book_path(@book) %></td>
		<td><%= @book.body %></td>
		<% if @book.user == current_user %>
		<td><%= link_to 'Edit', edit_book_path(@book) %></td>
		<td><%= link_to 'Destroy', book_path(@book), method: :delete, date:{confirm:'本当に消しますか？'} %></td>
		<% end %>
	  </tr>
    </table>
    </div>
  </div>
</div>
