<div class="container">
    <%= flash[:notice] %>
  <div class="row">
    <div class="col-xs-3">

<%= render partial: 'users/list', locals: { book:@book,user:@user } %>
</div>
    <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table table-striped">
	  <tr>
	  <td>
      <%=link_to user_path(@user) do %>
       <%= attachment_image_tag @book.user, :profile_image, format:"jpeg",fallback:"no_image.jpg",size:"40x40"%>
       <%= @user.name %>
       <% end %>
    </td>
		<td><%= link_to @book.title,book_path(@book) %></td>
		<td><%= @book.body %></td>
		<% if @book.user == current_user %>
		<td><%= link_to 'Edit', edit_book_path(@book) %></td>
		<td><%= link_to 'Destroy', book_path(@book), method: :delete, date:{confirm:'本当に消しますか？'} %></td>
		<% end %>
	  </tr>
    </table>
    </div>
  </div>
</div>
