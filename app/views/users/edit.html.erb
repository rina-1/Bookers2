<h1>User info</h1>
<% if @user.errors.any? %>
  <h2><%= @user.errors.count %>件のerrorが発生しました。</h2>
  <ul>
  <% @user.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
  </ul>
<% end %>


<%= form_for(@user) do |f| %>
<h3>name</h3>
<%= f.text_field :name %>
<h3>Image</h3>
<%= f.attachment_field :profile_image %>
<h3>Intoroduction</h3>
<%= f.text_area :introduction %>
<%= f.submit "Update User" %>
<% end %>

