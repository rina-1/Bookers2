<div class="container">
  <%= flash[:notice] %>
  <div class="row">
    <div class="col-xs-3">

<%= render partial: 'users/list', locals: { book:@book,user:@user } %>
    </div>
    <div class="col-xs-9">
     <h2>Users</h2>
     <table class="table">
	  <thead>
      <tr>
		    <th>image</th>
		    <th>name</th>
		    <th></th>
        <th colspan="3"></th>
	    </tr>
    </thead>
<tbody>
	  <% @users.each do |users| %>
	  <tr>
    	<td>
        <%= attachment_image_tag users, :profile_image,format:"jpeg",fallback:"no_image.jpg",size:"40x40"%></td>
	    <td><%= users.name %></td>
    	<td><%= link_to 'Show',user_path(users) %></td>
      </tr>
      <% end %>
     </tbody>
   </table>
  </div>
 </div>
</div>