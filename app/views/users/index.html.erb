<div class="container">
  <div class="row">
    <div class="col-xs-3">
    <% if flash[:notice] %>
    <%= flash[:notice] %>
    <% end %>

    <div class="profile-container">
    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format:'jpeg', class:"img-circle pull-left profile-img", fallback:"no_image.jpeg" %>
    <h2>name</h2>
    <%= @user.name %>
    <h2>introduction</h2>
    <%= @user.introduction %>
     </div>

    <div class="user_edit">
    <%= link_to edit_user_path(current_user) do %>
    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    <% end %>
    </div>
<%= render partial: 'users/list', locals: { book:@book } %>
    </div>
    <div class="col-xs-9">
     <h2>Users</h2>
     <table class="table table-striped">
	  <tr>
		<th>image</th>
		<th>name</th>
		<th></th>
	  </tr>
	  <% @users.each do |users| %>
	  <tr>
    	<td><%= attachment_image_tag users, :profile_image,:profile_image,format:"jpeg",fallback:"no_image.jpg",size:"40x40"%></td>
	    <td><%= users.name %></td>
    	<td><%= link_to 'Show',user_path(users) %></td>
      </tr>
      <% end %>
     </table>
    </div>
  </div>
</div>

