<div class="container">
  <div class="row">
    <div class="col-xs-3">
    <% if flash[:notice] %>
    <%= flash[:notice] %>
    <% end %>

    <div class="profile-container">
    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format:'jpeg', class:"img-circle pull-left profile-img", fallback:"no_image.jpeg" %>
    <h2>name</h2>
    <%= @user.name %>
    <h2>introduction</h2>
    <%= @user.introduction %>
     </div>

    <div class="user_edit">
           <%= link_to edit_user_path(@user) do %>
            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
           <% end %>
    </div>
<%= render partial: 'users/list', locals: { book:@book } %>
    </div>
    <div class="col-xs-9">
    <h1>Books</h1>
    <table class="table table-striped">
	  <tr>
		<th>     </th>
		<th>Title</th>
		<th>Opinion</th>
	  </tr>
	  <% @user.books.each do |book| %>
	  <tr>
		<td>
            <%= link_to users_path(book) do %>
            <%= attachment_image_tag @user, :profile_image,:fill,60,60,format:'jpeg',class:"img-circle pull-left profile-img",fallback:"no_image.jpeg" %>
            <% end %>
        </td>
		<td><%= link_to book.title,book_path(book) %></td>
		<td><%= book.body %></td>
	  </tr>
	  <% end %>
    </table>
    </div>
  </div>
</div>
